<MARCDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        id: _root_box
        BoxLayout:
            id: _list_box
            ScrollView:
                id: _scrollview
                GridLayout:
                    id: _metadata
                    cols: 2
                    size_hint_y: None
                    spacing: 5
                    padding: [0, 0, 5, 0]
                    Label:
                        color: 1,1,1,1
                        text: 'Catalog:'
                        size_hint: (None, None)
                        size: (75, 40)
                        valign: 'middle'
                    MetadataTextInput:
                        hint_text: ''
                        multiline: False
                        size_hint_y: None
                        height: 40
                        metadata_key: 'catalog'
                    Label:
                        color: 1,1,1,1
                        text: 'Field:'
                        size_hint: (None, None)
                        size: (75, 40)
                        valign: 'middle'
                    MetadataTextInput:
                        hint_text: ''
                        multiline: False
                        size_hint_y: None
                        height: 40
                        metadata_key: 'field'
                    Label:
                        color: 1,1,1,1
                        text: 'Term:'
                        size_hint: (None, None)
                        size: (75, 40)
                        valign: 'middle'
                    MetadataTextInput:
                        hint_text: ''
                        multiline: False
                        size_hint_y: None
                        height: 40
                        metadata_key: 'term'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.popup.dismiss()
            Button:
                text: "Done"
                on_release: root.save_metadata()

<UniversalIDDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        id: _root_box
        BoxLayout:
            id: _list_box
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.popup.dismiss()

            Button:
                text: "Select"
                on_release: root.button_callback()

