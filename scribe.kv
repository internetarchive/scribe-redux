### ScribeWidget is the main UI container
###
<ScribeWidget>:
    id: _scribe_widget
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    ## the toolbar on the top
    ActionBar:
        pos_hint: {'top':1}
        background_color: 0,0,0,1
        ActionView:
            use_separator: True
            ActionPrevious:
                #title: 'Scribe'
                id: _scribe_widget_action_previous
                text: 'Scribe\n[i]from the Internet Archive[/i]'
                with_previous: False
                markup: True
                halign: 'left'
                valign: 'middle'
                text_size: self.size
                padding: (-75, 0)

    ScreenManager:
        id: _screen_manager
        CaptureScreen:
            id: _capture_screen
            name: 'capture_screen'
            scribe_widget: _scribe_widget
            screen_manager: _screen_manager
       
